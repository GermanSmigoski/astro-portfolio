---
import ButtonDarkMode from "./buttonDarkMode.astro";
---

<astro>
  <style>
    header {
      position: fixed;
      top: 0;
      width: 100%;
      background-color: #333;
      color: #fff;
      padding: 1rem;
      display: flex;
      justify-content: space-around;
      align-items: center;
      z-index: 100;
    }

    h1 {
      margin: 0;
      font-size: 1.5rem;
    }

    nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
    }

    nav li {
      margin-right: 1rem;
    }

    nav a {
      color: #fff;
      text-decoration: none;
    }
  </style>
  <header>
    <h1>Mi Sitio Web</h1>
    <nav>
      <ul>
        <ButtonDarkMode />
        <li><a href="#skills">Skills</a></li>
        <li><a href="#proyects">Proyectos</a></li>
        <li><a href="#redes">Redes</a></li>
      </ul>
    </nav>
  </header>
</astro>
