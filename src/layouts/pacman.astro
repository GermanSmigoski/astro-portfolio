      justify-content: space-around;
      width: 200px;
      animation: eating-path 31s linear infinite;
    }
    .path img {
      width: 100%;
      height: 60px;
    }
    .path::before {
      content: "";
      height: 1rem;
      width: 1rem;
      border-radius: 50%;
    }
    @keyframes eating-path {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-200px * 11));
      }
    }

    .pacman {
      position: relative;
      background: transparent;
      z-index: 1;
    }

    .pacman::before,
    .pacman::after {
      content: "";
      position: absolute;
      top: -10px;
      left: -8px;
      display: block;
      border-radius: 50%;
      height: 0px;
      width: 0px;
    }

    .pacman::before {
      animation: chunk-top 2.3s ease infinite;
      border: 55px solid #ffcc00;
      border-left-color: transparent;
      border-bottom-color: transparent;
    }

    @keyframes chunk-top {
      0%,
      100% {
        transform: rotate(-45deg);
      }
      50% {
        transform: rotate(-80deg);
      }
    }

    .pacman::after {
      animation: chunk-bottom 2.3s ease infinite;
      border: 55px solid #ffcc00;
      border-right-color: transparent;
      border-top-color: transparent;
    }
    @keyframes chunk-bottom {
      0%,
      100% {
        transform: rotate(-40deg);
      }
      50% {
